<header>
  <div class="container">
    <a href="/">
      <div class="logo">
        <h1>Launchstore</h1>
        <h2>COMPRA E VENDA</h2>
      </div>
    </a>

    <form class="search" method="GET" action="/products/search">
      <input type="text" name="filter" placeholder="Buscar por Produtos" {% if search.term %} value="{{search.term}}"
        {% endif %}>
    </form>

    <nav class="primary">
      <ul>
        <li>
          <a href="/ads/create">
            <i class="material-icons">add</i>
            Novo Anúncio
          </a>
        </li>
        
        {% if session.userId %}
        <li class="accounts">
          <a href="/login">
            <i class="material-icons">account_circle</i>
            {{user.name}}
          </a>
          
          <ul class="submenu">
            <li><a href="/users/accounts">Minha Conta</a></li>
            <li><a href="/products/create">Meus Anúncios</a></li>
            <li><a href="/selling">Minhas Vendas</a></li>
            <li>
              <form action="/users/logout" method="POST">
                <button>Sair</button>
              </form>
            </li>
          </ul>
          {% else %}
          <li class="accounts">
            <a href="/login">
              <i class="material-icons">account_circle</i>
              Minha Conta
            </a>
          </li>
          {% endif %}
          
        </li>
        <li class="cart">
          <a href="/cart">
            <i class="material-icons">shopping_cart</i>
            {% if (session.cart) and (session.cart.total.quantity > 0) %}
            <span id="cart-status-info">{{session.cart.total.quantity}}</span>
            {% endif %}
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>