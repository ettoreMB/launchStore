{% extends "layout.njk" %}

{% block content %}

<section class="password container form">
    <form action="/users/forgot-password" method="POST">
      <div class="header">
        <h3>Esqueceu a senha?</h3>
      </div>

        <div class="fields">
          <div class="item">
            <div>E-mail</div>
            <div class="input">
              <input 
                type="email" 
                name="email"
                value="{{user.email}}"
                placeholder="Digite o email cadastrado!" 
                required="required"
                onblur="Validate.apply(this, 'isEmail')"
              >
            </div>
        </div>

        <button type="submit" class="button">Recuperar a senha</button>
    </form>
</section>

    
{% endblock %}